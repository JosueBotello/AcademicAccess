{
  "name": "academicaccess",
  "version": "1.0.0",
  "description": "Online University Staff Directory with ChatBot",
  "main": "server.js",
  "scripts": {
    "start": "NODE_ENV=development node backend/server.js",
    "test": "NODE_ENV=test jest",
    "test:watch": "NODE_ENV=test jest --watch",
    "start:prod": "NODE_ENV=production node server.js"
  },
  "dependencies": {
    "@faker-js/faker": "^8.4.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.17.1",
    "pg": "^8.7.1",
    "sequelize": "^6.37.3",
    "sequelize-cli": "^6.6.2"
  },
  "devDependencies": {
    "autocannon": "^7.15.0",
    "express-validator": "^6.14.0",
    "jest": "^27.5.1",
    "supertest": "^6.3.4"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/backend/jest.setup.js"
    ]
  }
}
